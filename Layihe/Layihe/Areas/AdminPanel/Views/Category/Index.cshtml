
@{
    ViewData["Title"] = "Index";
    List<Category> categories = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark font-weight-bold text-white">
                <p style="padding-bottom: 10px">
                    <a asp-action="Create" class="btn btn-outline-success" >Create</a>
                </p>
                <h4 class="card-title text-white">Categories</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-white">Name</th>
                                <th class="text-white">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in categories)
                            {
                                <tr>
                                    <td class="text-white">@category.Name</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <nav aria-label="..." id="pagination1">
                            <ul class="pagination pagination-lg">
                                @for (int i = 1; i <= ViewBag.PageCount; i++)
                                {
                                    if (ViewBag.Page == i)
                                    {
                                        <li class="page-item disabled">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

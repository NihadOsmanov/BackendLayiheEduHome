@model Course;
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Course</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo">Image</label>
                        <input asp-for="Photo" class="form-control" placeholder="Image" accept="*/image">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.AboutCourse"></label>
                        <input asp-for="@Model.CourseDetail.AboutCourse" class="form-control" placeholder="AboutCourse">
                        <span asp-validation-for="@Model.CourseDetail.AboutCourse" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.HowToApply"></label>
                        <input asp-for="@Model.CourseDetail.HowToApply" class="form-control" placeholder="HowToApply">
                        <span asp-validation-for="@Model.CourseDetail.HowToApply" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Certification"></label>
                        <input asp-for="@Model.CourseDetail.Certification" class="form-control" placeholder="Certification">
                        <span asp-validation-for="@Model.CourseDetail.Certification" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.StartDate"></label>
                        <input asp-for="@Model.CourseDetail.StartDate" class="form-control" placeholder="StartDate">
                        <span asp-validation-for="@Model.CourseDetail.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Language"></label>
                        <input asp-for="@Model.CourseDetail.Language" class="form-control" placeholder="Language">
                        <span asp-validation-for="@Model.CourseDetail.Language" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Students"></label>
                        <input asp-for="@Model.CourseDetail.Students" class="form-control" placeholder="Students">
                        <span asp-validation-for="@Model.CourseDetail.Students" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Duration"></label>
                        <input asp-for="@Model.CourseDetail.Duration" class="form-control" placeholder="Duration">
                        <span asp-validation-for="@Model.CourseDetail.Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.ClassDuration"></label>
                        <input asp-for="@Model.CourseDetail.ClassDuration" class="form-control" placeholder="ClassDuration">
                        <span asp-validation-for="@Model.CourseDetail.ClassDuration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Assesments"></label>
                        <input asp-for="@Model.CourseDetail.Assesments" class="form-control" placeholder="Assesments">
                        <span asp-validation-for="@Model.CourseDetail.Assesments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseDetail.Price"></label>
                        <input asp-for="@Model.CourseDetail.Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="@Model.CourseDetail.Price" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}

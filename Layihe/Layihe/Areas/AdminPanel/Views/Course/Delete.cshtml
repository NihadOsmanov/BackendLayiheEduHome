
@{
    ViewData["Title"] = "Delete";
    CourseDetail courseDetail = Model;
}

<div class="card-body">
    <img src="~/img/course/@courseDetail.Course.Image" style="width: 200px !important; height: 200px !important; object-fit: cover !important"/>
</div>
<div class="card-body">
    <h5>Course Name</h5>  @courseDetail.Course.Name
</div>
<div class="card-body">
    <h4 class="card-text" style="font-family: Montserrat, sans-serif;">Do you want to delete?</h4>
</div>
<div class="row" style="margin-left: 10px;">
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px">Go Back</a>
</div>

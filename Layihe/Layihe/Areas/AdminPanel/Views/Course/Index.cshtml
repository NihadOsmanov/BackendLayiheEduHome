
@{
    ViewData["Title"] = "Index";
    List<Course> courses = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <p style="padding: 30px">
                <a asp-action="Create" class="btn btn-primary btn-lg">Create</a>
            </p>
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>StartDate</th>
                                <th>Language</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in courses)
                            {
                                <tr>
                                    <td><img src="~/img/course/@course.Image" style="width: 100px !important; height:100px !important; object-fit: cover !important" /></td>
                                    <td>@course.Name</td>
                                    <td>@course.CourseDetail.StartDate.ToString("dd MMMM")</td>
                                    <td>@course.CourseDetail.Language</td>
                                    <td>@course.CourseDetail.Price</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Detail" asp-route-id="@course.Id">Detail</a>
                                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@course.Id">Update</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <nav aria-label="..." id="pagination1">
                            <ul class="pagination pagination-lg">
                                @for (int i = 1; i <= ViewBag.PageCount; i++)
                                {
                                    if (ViewBag.Page == i)
                                    {
                                        <li class="page-item disabled">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
</div>

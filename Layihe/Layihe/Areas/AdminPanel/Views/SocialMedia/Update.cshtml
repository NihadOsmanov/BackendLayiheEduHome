@model SocialMediaOfTeacher

@{ ViewData["Title"] = "Create"; }

<div class="row d-flex">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bg-dark text-white">
                <h4 class="card-title">Update Spiker</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Link"></label>
                        <input class="form-control" asp-for="Link">
                        <span class=" text-danger" asp-validation-for="Link"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Icon"></label>
                        <input class="form-control" asp-for="Icon">
                        <span class=" text-danger" asp-validation-for="Icon"></span>
                    </div>
                    <div class="form-group">
                        <select class="custom-select" name="teachersId">
                            <option value="">Select Teacher</option>
                            @foreach (var teacher in ViewBag.Teachers)
                            {
                <option value="@teacher.Id">@teacher.FullName</option>
}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card bg-dark text-white">
            <div class="card-body myIcon">
                @foreach (SocialMedia socmed in ViewBag.SocialMedia)
                {
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="col-3 mb-1">
                            @socmed.IconName :
                        </div>
                        <div class="col-9 mb-1 myIcon">
                            @Html.Raw(socmed.Icon)  @socmed.Icon
                        </div>
                    </div>
                 }
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}


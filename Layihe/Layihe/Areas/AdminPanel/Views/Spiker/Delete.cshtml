
@{
    ViewData["Title"] = "Delete";
    Spiker spiker = Model;
}

<div class="card-body">
    <img src="~/img/event/@spiker.Image" style="width: 200px !important; height: 200px !important; object-fit: cover !important" />
</div>
<div class="card-body">
    <h5>FullName</h5>  @spiker.FullName
</div>
<div class="card-body">
    <h4 class="card-text" style="font-family: Montserrat, sans-serif;">Do you want to delete?</h4>
</div>
<div class="row" style="margin-left: 10px;">
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px">Go Back</a>
</div>

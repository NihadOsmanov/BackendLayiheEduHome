@model ChangeRoleViewModel;
@{
    ViewData["Title"] = "Change Role";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Change Role</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" class="form-control" placeholder="Name" disabled>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role">Role</label>
                        <input asp-for="Role" class="form-control" placeholder="Role" disabled>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select class="form-control" aria-label="Default select example" name="selectedRole" id="SelectedRole">
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" aria-label="Default select example" multiple name="CoursesId" id="CourseId">
                            @foreach (var course in ViewBag.Courses)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Change role</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://cdn.ckeditor.com/ckeditor5/27.1.0/classic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script>
        $("#SelectedRole").change(function () {
            if ((this).val() == "CourseModerator") {
                $("#CourseId").css("display", "block")
            }
            else {
                $("#CourseId").css("display", "none")

            }
        })

    </script>

}

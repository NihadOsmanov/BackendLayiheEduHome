@{
    ViewData["Title"] = "Index";
    List<UserViewModel> users = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>IsDeactive</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users)
                            {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Surname</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>@user.IsDeactive</td>
                                <td>
                                    <a class="btn btn-success" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                                    <a class="btn btn-primary" asp-action="ChangeRole" asp-route-id="@user.Id">Change Role</a>
                                    @if (user.IsDeactive)
                                    {
                                        <a class="btn btn-danger" asp-action="Activity" asp-route-id="@user.Id">Active</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger" asp-action="Activity" asp-route-id="@user.Id">Deactive</a>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


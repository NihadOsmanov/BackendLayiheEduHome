@model BannerArea
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style='background-image: url(" @ViewBag.Source/img/banner/@Model.Image")'>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@ViewBag.BannerArea</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
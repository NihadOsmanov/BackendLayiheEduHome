
@model List<Teacher>

<div class="row">
    @foreach (var teacher in Model)
    {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher">
                <div class="single-teacher-img">
                    <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id"><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a href="teacher-details.html">@teacher.FullName</a></h2>
                    <h4>@teacher.ProfessionOfTeacher.Profession</h4>
                    <ul>
                        @foreach (var smt in teacher.SocialMediaOfTeachers)
                        {
                            <li><a href="@smt.Link">@Html.Raw(smt.Icon)</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>



@{
    ViewData["Title"] = "Teacher Index";
}

<!-- Banner Area Start -->
@await Component.InvokeAsync("BannerArea", new { title = "Our Teachers" })
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search teachers</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="text" placeholder="Search..." name="search" id="search-teacher-input" />
                    </form>
                </div>
            </div>
        </div>
        <div class="row" id="old-teachers">
            @await Component.InvokeAsync("Teacher", new { take = 8, skip = ViewBag.Page })
        </div>
        <div class="row" id="new-teachers">
        </div>
        <div>
            <nav aria-label="..." id="pagination1">
                <ul class="pagination pagination-lg">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (ViewBag.Page == i)
                        {
                            <li class="page-item disabled">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                            </li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- Teacher End -->

